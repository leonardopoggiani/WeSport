<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>UserListServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.UserListServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomepageServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.HomepageServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.LoginServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.ProfileServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.ChatServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChatroomServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.ChatroomServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>
            it.unipi.dsmt.servlets.LogoutServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookFieldServlet</servlet-name>
        <servlet-class>it.unipi.dsmt.servlets.BookFieldServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TimeslotServlet</servlet-name>
        <servlet-class>it.unipi.dsmt.servlets.TimeslotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookedEventServlet</servlet-name>
        <servlet-class>it.unipi.dsmt.servlets.BookedEventServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserListServlet</servlet-name>
        <url-pattern>/userlist</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomepageServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatServlet</servlet-name>
        <url-pattern>/chat</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChatroomServlet</servlet-name>
        <url-pattern>/chatroom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TimeslotServlet</servlet-name>
        <url-pattern>/timeslot</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookFieldServlet</servlet-name>
        <url-pattern>/bookfield</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookedEventServlet</servlet-name>
        <url-pattern>/bookedEvent</url-pattern>
    </servlet-mapping>

</web-app>
